    "express": "^4.16.0",
    "mongoose": "^4.13.8",
    "morgan": "^1.9.0",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.18.10",
    "serve-favicon": "~2.4.5",
    "socket.io": "^2.0.4",
    "solc": "^0.4.19",
    "ws": "^7.2.1",
    "xdc3": "^1.2.11",
    "xdc3-old": "npm:xdc3@^0.20.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
